{
  "manifest_version": 3,
  "name": "GroqVoice",
  "version": "2.1",
  "description": "Facilitando sua vida atrav√©s de IA.",
  "permissions": ["storage", "activeTab", "clipboardWrite"],
  "host_permissions": ["https://api.groq.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "action": {
    "default_icon": "images/microphone.png",
    "default_title": "GroqVoice"
  },
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "Command+Space"
      },
      "description": "Toggle dictation start/stop"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
